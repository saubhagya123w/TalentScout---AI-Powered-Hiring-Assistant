# Local config (copy to .env and fill values as needed)

# Choose provider manually (optional): auto, openai, azure_openai, rule_based
FORCE_PROVIDER=auto

# OpenAI (if you have a key)
OPENAI_API_KEY=
OPENAI_ENGINE=text-davinci-003

# Azure OpenAI (if available)
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT= # e.g., https://<your-resource>.openai.azure.com
AZURE_OPENAI_DEPLOYMENT= # e.g., text-davinci-003

# Azure Blob Storage (optional)
AZURE_BLOB_CONN_STR=   # Connection string for your storage account (or use SAS)
AZURE_BLOB_CONTAINER=  # Container name (create first)

# (Optional) Azure Key Vault details (recommended for production)
AZURE_KEYVAULT_NAME=

